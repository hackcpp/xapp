@{
    ViewData["Title"] = "HTTP 组件测试";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-house-door"></i> 返回主页
        </a>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <a asp-action="TestHttpClient" class="btn btn-primary btn-lg w-100 py-3">
                <i class="bi bi-lightning-charge"></i> 测试 HttpClient
            </a>
        </div>
        <div class="col-md-4 mb-3">
            <a asp-action="TestWebRequest" class="btn btn-primary btn-lg w-100 py-3">
                <i class="bi bi-clock-history"></i> 测试 HttpWebRequest
            </a>
        </div>
        <div class="col-md-4 mb-3">
            <a asp-action="TestLocalApi" class="btn btn-primary btn-lg w-100 py-3">
                <i class="bi bi-server"></i> 测试 Web API
            </a>
        </div>
    </div>
</div>
